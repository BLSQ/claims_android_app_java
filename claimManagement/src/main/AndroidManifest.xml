<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.exact.imis.claim">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity
            android:name="com.exact.imis.claim.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.exact.imis.claim.EnquireActivity"
            android:label="@string/title_activity_enquire"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.exact.imis.claim.ClaimActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.exact.imis.claim.AddItems"
            android:label="@string/AddItems"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.exact.imis.claim.AddServices"
            android:label="@string/AddServices"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.exact.imis.claim.MapItems"
            android:label="@string/MapItems"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.exact.imis.claim.MapServices"
            android:label="@string/MapServices"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.exact.imis.claim.Statistics"
            android:label="@string/GetStats"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name="com.exact.imis.claim.Synchronize" />
        <activity android:name="com.exact.imis.claim.About" />
        <activity
            android:name="com.exact.imis.claim.Report"
            android:label="@string/title_activity_report"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>